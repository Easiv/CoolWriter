{{#link-to 'books.new'}}
  {{#paper-button raised=true}}
    {{paper-icon 'book'}}
    {{t 'book.new'}}
  {{/paper-button}}
{{/link-to}}
<br>
<br>

{{#each model as |book index|}}
  <div class="layout-row layout-xs-column">
    <div class="layout-column flex-xs flex-gt-xs-20">
      {{#paper-card as |card|}}
        {{card.image src=book.cover alt=(t 'image.display.fail') title=book.title}}
        {{#card.title as |title|}}
          {{#title.text as |text|}}
            {{#text.headline}}{{book.title}}{{/text.headline}}
            {{#text.subhead}}{{book.author}}{{/text.subhead}}
          {{/title.text}}
        {{/card.title}}
        {{#card.content}}
          <p>
            <i>
              {{book.description}}
            </i>
          </p>
        {{/card.content}}
        {{#card.actions}}
          {{#paper-button iconButton=true raised=true onClick=(action 'deleteBook' book)}}{{paper-icon 'delete'}}{{/paper-button}}
          {{#paper-button iconButton=true raised=true onClick=(action 'editBook' book)}}{{paper-icon 'edit'}}{{/paper-button}}
        {{/card.actions}}
      {{/paper-card}}
    </div>
  </div>
{{/each}}

<div class='outletMargin'>
  {{outlet}}
</div>
