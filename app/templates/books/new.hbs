{{outlet}}

<h2 class="textCenter">{{t 'book.new'}}</h2>

{{#paper-form as |form|}}
  <div class="layout-row">
    <div class="layout-column flex-50 titleCover">
      {{form.input data-test-book-title label=(t 'book.title') value=title onChange=(action (mut title)) required=true}}
      {{form.input data-test-book-cover label=(t 'book.cover') value=cover onChange=(action (mut cover))}}
    </div>
    <div class="layout-column flex-50 authorDescription">
      {{form.input data-test-book-author label=(t 'book.author') value=author onChange=(action (mut author)) required=true}}
      {{form.input data-test-book-description label=(t 'book.desc') value=description onChange=(action (mut description))}}
    </div>
  </div>
  <div class="layout-row">
    {{#form.submit-button data-test-button-create raised=true primary=true onClick=(action 'createBook')}}{{t 'actions.create'}}{{/form.submit-button}}
    {{#link-to 'books.index'}}{{#paper-button data-test-button-back primary=true}}Cofnij{{/paper-button}}{{/link-to}}
  </div>
{{/paper-form}}
